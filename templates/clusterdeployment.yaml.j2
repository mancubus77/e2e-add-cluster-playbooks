---
apiVersion: hive.openshift.io/v1
kind: ClusterDeployment
metadata:
  annotations:
    agentBareMetal-agentSelector/autoSelect: "true"
  labels:
  name: {{ cluster_name }}
  namespace: {{ cluster_name }}
spec:
  baseDomain: rhpg.org
  clusterInstallRef:
    group: extensions.hive.openshift.io
    kind: AgentClusterInstall
    name: {{ cluster_name }}
    version: v1beta1
  clusterName: {{ cluster_name }}
  platform:
    agentBareMetal:
      agentSelector:
        matchLabels: {}
  pullSecretRef:
    name: pullsecret-cluster-{{ cluster_name }}